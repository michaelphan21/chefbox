  <!-- Page Content -->
  <div class="container" style="text-align: center; position: relative;" id="container">
    <div class="form-group">
      <div class="input-group col-md-7" style="padding: 0 20px 0 20px;">
        <input id="keyword-search" type="text" class="form-control"  placeholder="What kind of food do you have in mind?" style="text-align: center;"/>
        <div class="input-group-btn" role="group">
          <button style="background: #fff; border: none; text-shadow: none; padding: none;">
            <span>
              <img src="images/magnifying-glass32.png" alt="none" />
            </span>
          </button>
        </div>
      </div>
    </div>
    <hr>
    <div class="row" style="height: 480px; width: 100%; margin: auto; padding: 0 20px 0 20px; text-align: center;" >
      <div class="col-md-12 portfolio-item" id="map-container" style="height: 480px; width: 100%; margin: auto; padding: 0 20px 0 20px; "></div>
    </div>
    <hr>
    <div class="row" style="text-align: center; width: 100%; margin: auto;">
      {{#each fooditems}}
      <div class="col-md-3 portfolio-item" id="{{id}}" style="text-align: center;">
          <table>
          <thead>
          </thead>
          <tbody>
            <tr>
              <td>
                <button style="background: #fff; border: none; text-shadow: none;">
                  <span class="image">
                    <img src="{{imageURL}}" style="width: 100%;" alt="none" />
                  </span>
                </button>
              </td>
              <td>
                <b>{{price}}</b>, <b>{{rating}}</b>/5.0
                <br>
                {{description}}
                <br><b>{{location}}</b><br>
                <b>There are : {{count}} : items left</b>
                <br>
                <table align="center">
                  <thead>
                  </thead>
                  <tbody>
                    <td>
                      <br><button type="button" class="btn btn-default">view</button>
                    </td>
                    <td>&nbsp;&nbsp;</td>
                    <td>
                        <form id="ordering" method="get" action="/decCounter">
                      <br><button type="button" class="btn btn-primary">order now</button>
                        </form>
                    </td>                      
                  </tbody>
                </table>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <hr>
      {{/each}}
    </div>
    <script>
